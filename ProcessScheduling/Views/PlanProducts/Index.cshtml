@model IEnumerable<ProcessScheduling.Models.PlanProduct>

@{
    ViewBag.Title = "Plan Products";
}

<h2>@ViewBag.Title</h2>

<p>
    <a href="@Url.Action("Create", "PlanProducts")" class="btn btn-primary btn-large">Add Plan Product</a>
</p>
<table class="table">
    <tr>
        <th>Plan</th>
        <th>Product</th>
        <th>Production Target</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Plan.Name, "Details", new { id = item.Id })
        </td>
        <td>
            @Html.ActionLink(item.Product.Code, "Details", new { id = item.Id })
        </td>
        <td>
            @Html.ActionLink(item.TargetNumber.ToString(), "Details", new { id = item.Id })
        </td>
        <td>
            <a href="@Url.Action("Edit", "PlanProducts", new { id = item.Id})" class="btn btn-info btn-sm">Edit</a>
        </td>
    </tr>
}

</table>
