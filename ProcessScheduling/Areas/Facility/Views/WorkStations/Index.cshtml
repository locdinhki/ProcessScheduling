@model IEnumerable<ProcessScheduling.Models.WorkStation>

@{
    ViewBag.Title = "WorkStations";
}

<h2>@ViewBag.Title</h2>

<p>
    <a href="@Url.Action("Create", "WorkStations")" class="btn btn-primary btn-large">Add WorkStation</a>
</p>
<table class="table">
    <tr>
        <th>Line</th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>Type</th>
        <th>Phase</th>
        <th>Cycle Time</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            <a href="~/Facility/Lines/Details/@item.Line.Id">@item.Line.Name</a>
        </td>
        <td>
            @Html.ActionLink(item.Name, "Details", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <a href="~/Facility/WorkStationTypes/Details/@item.WorkStationType.Id">@item.WorkStationType.Name</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhaseNumber)
        </td>
        <td>
            @string.Format("{0:0.00}", ProcessScheduling.Utils.Utils.GetCycleTime(item))
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
        </td>
    </tr>
    }

</table>
